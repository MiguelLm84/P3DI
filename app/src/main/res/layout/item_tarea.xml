<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#020202"
        android:padding="2dp"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundTint="#FFFFFF"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B2DFDB"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/tv_fecha_tarea"
                    android:textColor="#020202"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_nombreTarea"
                    tools:layout_editor_absoluteX="122dp" />

                <TextView
                    android:id="@+id/tv_tareaNueva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/tv_tareaNueva"
                    android:textColor="#020202"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_fechaNueva"
                    app:layout_constraintStart_toEndOf="@+id/tv_nombreTarea"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_nombreTarea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/tv_nombre_tarea"
                    android:textColor="#020202"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_fecha"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="122dp" />

                <TextView
                    android:id="@+id/tv_fechaNueva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/tv_fecha_nueva"
                    android:textColor="#020202"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_fecha"
                    app:layout_constraintTop_toBottomOf="@+id/tv_nombreTarea" />

                <ImageButton
                    android:id="@+id/btn_Fav_blanco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/todo"
                    app:layout_constraintBottom_toTopOf="@+id/btn_eliminar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_estrella_1_blanco" />

                <ImageButton
                    android:id="@+id/btn_Fav_amarillo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/todo"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.055"
                    app:srcCompat="@drawable/ic_estrella_1" />

                <ImageButton
                    android:id="@+id/btn_eliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/todo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_Fav_blanco"
                    app:srcCompat="@drawable/basura__1_" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>